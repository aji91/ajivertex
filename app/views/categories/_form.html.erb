<div class="dbmnContainer">
	<a class="btn bckBtn" href="<%= categories_path %>"><img src="/assets/backIcon.svg" alt="">Back</a>
	<div class="pgHdWrpr">
		<h2 class="pgHdr">New Category</h2>
	</div>
	<div class="formWrapper">
		<%= form_for(@cat, url: @cat.new_record? ? categories_path : category_path(@cat), html: { "data-parsley-validate" => true, class: '', id: 'cat-form' }) do |f| %>
			<div class="inptWrpr">
				<label class="cstmLbl">Category Name</label>
				<%= f.text_field :name, placeholder: "Name", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter name." %>
			</div>
			<div class="inptWrpr">
				<label class="cstmLbl">Active</label>
				<label class="chkContainer">Yes
					<%= f.check_box :active %>
					<span class="checkmark"></span>
				</label>
			</div>
			<div class="fmBtnWrpr">
				<button class="btn primButton form-submit">Submit</button>
				<a class="btn outlButton" href="<%= categories_path %>" style="width: 150px;">Cancel</a>
			</div>
		<% end %>
	</div>
</div>
