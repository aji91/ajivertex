<div class="dbmnContainer">
  <div class="pgHdWrpr d-flex align-items-start justify-content-between">
    <h2 class="pgHdr">Clients</h2>
    <a class="btn primButton" href="<%= new_client_path %>">New Client</a>
  </div>
  <div class="srchSpce mt-5 d-flex align-items-center justify-content-between">
    <%= form_tag({controller: controller_name, action: action_name}, {method: :get}) do %>
    <div class="srchWrpr d-flex align-items-center">
      <span class="material-icons">search</span>
      <input type="search" name="search[name]" value="<%= @q.present? ? @q[:name] : '' %>">
    </div>
    <% end %>
    <a class="btn outlButton smlBtn" href="<%= download_report_clients_path(format: 'xlsx') %>">
      <img src="/assets/export_icon.svg" alt="">
      Export
    </a>
  </div>
  <table class="table cstmTable">
    <thead>
      <tr>
        <th>Name</th>
        <th>GSTIN</th>
        <th>Mobile</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Pincode</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.gstin %></td>
        <td><%= client.mobile %></td>
        <td><%= client.address_1 %></td>
        <td><%= client.city %></td>
        <td><%= client.state&.state_name %></td>
        <td><%= client.pin_code %></td>
        <td style="vertical-align: middle;">
          <a href="<%= client_path(client) %>">Show</a>
          <a href="<%= edit_client_path(client) %>">Edit</a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>