<div class="dbmnContainer">
  <a class="btn bckBtn" href="<%= departments_path %>"><img src="/assets/backIcon.svg" alt="">Back</a>
  <div class="pgHdWrpr">
    <h2 class="pgHdr">New Department</h2>
  </div>
  <div class="formWrapper">
    <%= form_for(@department, url: @department.new_record? ? departments_path : department_path(@department), html: { "data-parsley-validate" => true, id: 'department-form' }) do |f| %>
      <div class="inptWrpr">
        <label class="cstmLbl">Department Name</label>
        <%= f.text_field :name, placeholder: "Department Name", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter department Name." %>
      </div>
      <div class="fmBtnWrpr">
        <button class="btn primButton form-submit">Submit</button>
        <a class="btn outlButton" href="<%= departments_path %>" style="width: 150px;">Cancel</a>
      </div>
    <% end %>
  </div>
</div>