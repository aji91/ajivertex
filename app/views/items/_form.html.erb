<div class="dbmnContainer">
  <a class="btn bckBtn" href="<%= items_path %>"><img src="/assets/backIcon.svg" alt="">Back</a>
  <div class="pgHdWrpr">
    <h2 class="pgHdr">New Item</h2>
  </div>
  <div class="formWrapper">
    <%= form_for(@item, url: @item.new_record? ? items_path : item_path(@item), html: { "data-parsley-validate" => true, class: '', id: 'item-form' }) do |f| %>
    <div class="row">
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Item Name</label>
          <%= f.text_field :name, placeholder: "Name", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter name." %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">HSN</label>
          <%= f.text_field :hsn, placeholder: "HSN", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter HSN." %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Code</label>
          <%= f.text_field :code, placeholder: "Code", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter code." %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Part number</label>
          <%= f.text_field :part_number, placeholder: "Part number", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter Part number." %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Specification</label>
          <%= f.text_field :specification, placeholder: "Specification", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter Specification." %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Remaining quantity</label>
          <%= f.text_field :remaining_quantity, placeholder: "Remaining quantity", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter Remaining quantity.", class: 'number-only' %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Sell price</label>
          <%= f.text_field :sell_price, placeholder: "Sell price", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter Sell price.", class: 'number-only' %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Purchase price</label>
          <%= f.text_field :purchase_price, placeholder: "Purchase price", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter Purchase price.", class: 'number-only' %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Unit</label>
          <%= f.text_field :unit, placeholder: "Unit", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter Unit.", class: 'number-only' %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Opening stock</label>
          <%= f.text_field :opening_stock, placeholder: "Opening stock", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter Opening stock.", class: 'number-only' %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Minimum quantity</label>
          <%= f.text_field :minimum_quantity, placeholder: "Minimum quantity", "data-parsley-required" => "true", "data-parsley-required-message" => "Please enter Minimum quantity.", class: 'number-only' %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Category</label>
          <%= f.select :category_id, options_for_select(Category.active_cats.map { |p| [p.name, p.id] }, @item.category_id),{ include_blank: 'Select Category' }, class: 'form-control', 'data-parsley-required' => "true", 'data-parsley-required-message' => "Please select category."  %>
        </div>
      </div>
      <div class="col-6">
        <div class="inptWrpr">
          <label class="cstmLbl">Active</label>
          <label class="chkContainer">Yes
            <%= f.check_box :active %>
            <span class="checkmark"></span>
          </label>
        </div>
      </div>
    </div>
    <div class="fmBtnWrpr">
      <button class="btn primButton form-submit">Submit</button>
      <a class="btn outlButton" href="<%= items_path %>" style="width: 150px;">Cancel</a>
    </div>
    <% end %>
  </div>
</div>
